<md-card class="center">
    <form [formGroup]="formShell" (ngSubmit)="save(formShell)">

        <!-- Begin People Array -->

        <div formArrayName="people">
            <div *ngFor="let person of formShell.controls.people.controls; let i=index" class="panel panel-default">
                <!-- Angular assigns array index as group name by default 0, 1, 2, ... -->
                <div [formGroupName]="i">
                    <md-expansion-panel [expanded]="step === 0" (opened)="setStep(0)">
                        <md-expansion-panel-header>
                            <md-panel-title>
                                Person {{i + 1}}
                            </md-panel-title>
                            <md-panel-description>
                                <md-icon class="pull-right" *ngIf="formShell.controls.people.controls.length > 1" (click)="removePerson(i)">delete</md-icon>
                            </md-panel-description>
                        </md-expansion-panel-header>
                        <table>
                            <tr>
                                <td>
                                    <md-form-field>
                                        <input mdInput placeholder="Last Name" formControlName="lastName">
                                    </md-form-field>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <md-form-field>
                                        <input mdInput placeholder="First Name" formControlName="firstName">
                                    </md-form-field>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <md-form-field>
                                        <input mdInput placeholder="Middle Name" formControlName="middleName">
                                    </md-form-field>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <md-card>

                                    </md-card>
                                </td>
                            </tr>
                            <div class="panel">
                                <div formArrayName="addresses">
                                    <div *ngFor="let address of person.controls.addresses.controls; let j=index" class="panel panel-primary">
                                        <div class="panel-heading">
                                            <span>Address {{j + 1}}</span>
                                            <md-icon class="pull-right" *ngIf="person.controls.addresses.controls.length > 1" (click)="removeAddress(person, j)">delete</md-icon>
                                        </div>
                                        <div class="panel-body" [formGroupName]="j">
                                            <div>
                                                <md-form-field class="col-xs-12">
                                                    <input mdInput placeholder="Address" formControlName="street" [mdAutocomplete]="auto">
                                                </md-form-field>
                                                <md-autocomplete #auto="mdAutocomplete">
                                                    <md-option *ngFor="let option of options" [value]="option">
                                                        {{ option }}
                                                    </md-option>
                                                </md-autocomplete>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </table>
                        <button (click)="addAddress(person)" class="btn btn-primary">
                                Add another Address +
                            </button>
                    </md-expansion-panel>
                </div>
            </div>
        </div>

        <!-- End People Array-->
        <!-- Submit Button-->
        <div>
            <div>
                <button md-raised-button color="primary" (click)="addPerson()">Add person<md-icon class="pull-right">person_add</md-icon></button>
            </div>
        </div>
        <md-action-row> </md-action-row>
        <md-card-actions>
            <div class="form-group text-center">
                <button md-raised-button type="submit"><md-icon>navigate_before</md-icon>Previous </button>
                <button md-raised-button type="submit"> Next <md-icon>navigate_next</md-icon></button>
            </div>
        </md-card-actions>

    </form>
</md-card>